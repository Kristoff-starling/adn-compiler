internal {
	last: int
	limit: int
	token: int
	per_sec: int
}

fn init() {
	last := current_time();
	limit  := 50;
	token := 500;
	per_sec := 5.0;
}

fn req(rpc_req) {
	token := min(limit, per_sec * (current_time() - last));
	last := current_time();
	match(token > 1) {
		true => {
			token := token - rpc_req.get('meta_size');
			send(rpc_req, NET);
		}
		false => {
			send(err('ratelimit'), APP);
		}
	};
}

fn resp(rpc_resp) {
    send(rpc_resp, APP);
}